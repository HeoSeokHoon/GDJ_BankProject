<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
  <!-- mapper namespace(중복불가)는 비우면 에러 -->
  <!-- 해당 mapper를 사용할 DAO의 풀패키지명으로 작성 : 중복방지 -->
  <mapper namespace="com.winter.app.product.ProductDAO">
  	
  	<!-- search -->
  	<sql id="search">
  		<where>
	  		<if test="kind=='kind1' or kind=='kind3'">
				PRODUCTNAME LIKE '%'||#{search}||'%'
	  		</if>
	  		<if test="kind=='kind2' or kind=='kind3'">
	  			OR PRODUCTCONTENTS LIKE '%'||#{search}||'%'
	  		</if>		
  		</where>
  	</sql>
  	
  	<!-- list -->
  	<select id="productList" resultType="ProductDTO" parameterType="pager">
  		SELECT * FROM 
			(SELECT ROWNUM R, P.* FROM 
				(SELECT * FROM PRODUCT
					<include refid="search"></include>
				ORDER BY PRODUCTNUM DESC)
			 P)
		WHERE R BETWEEN #{startRow} AND #{lastRow}
  	</select>
  	
  	<!-- detail -->
  	<select id="productDetail" resultType="ProductDTO" parameterType="ProductDTO">
  		SELECT * FROM PRODUCT WHERE PRODUCTNUM=#{productNum}
  	</select>
  	
  	<!-- insert -->
  	<insert id="productAdd" parameterType="ProductDTO">
  		INSERT INTO PRODUCT VALUES (PRODUCT_SEQ.NEXTVAL, #{productName}, #{productContents}, #{productRate}, #{productJumsu})
  	</insert>
  	
  	<!-- Update -->
  	<update id="productUpdate" parameterType="ProductDTO">
	  	UPDATE PRODUCT SET PRODUCTNAME=#{productName}, PRODUCTCONTENTS=#{productContents}, PRODUCTRATE=#{productRate}, PRODUCTJUMSU=#{productJumsu} WHERE PRODUCTNUM=#{productNum}
  	</update>
  	
  	<!-- Delete -->
  	<delete id="productDelete" parameterType="ProductDTO">
  		DELETE PRODUCT WHERE PRODUCTNUM=#{productNum}
  	</delete>
  	
  	<!-- 총 데이터 수 구하기 -->
  	<select id="totalData" resultType="Long">
  		SELECT COUNT(PRODUCTNUM) FROM PRODUCT
  		<include refid="search"></include>
  	</select>
  </mapper>